pipeline {
    agent any
  
    stages {
        stage ('cleanup'){
            steps {
                script {
                    echo "Cleaning workspace..."
                    deleteDir()
                }
            }
        }
        stage('fetch app code') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage('Install dependencies') {
            steps {
                script {
                    echo "Installing dependencies with npm..."
                    nodejs('testenvnode') {
                        sh 'npm install'
                    }
                }
            }
        }
        stage('Verify Docker') {
            steps {
                script {
                    sh 'docker --version'
                }
            }
        }
        stage ('Build artifact'){
            steps{
                sh 'docker build -t calculator-app-finished .'
            }
        }
        stage('Push artifact to DockerHub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        // Here I in to Docker Hub
                        sh """
                            echo $DOCKER_PASSWORD | docker login --username $DOCKER_USERNAME --password-stdin
                        """
                        // Here I push the image to Docker Hub
                        sh 'docker tag calculator-app-finished $DOCKER_USERNAME/calculator-app-finished'
                        sh 'docker push $DOCKER_USERNAME/calculator-app-finished'
                    }
                }
            }
        }
        stage('Deploy container') {
            steps {
                script {
                    echo "Deploying container on port 3000..."
                    
                    // Stop and remove existing container if it exists
                    sh '''
                        if docker ps -a | grep calculator-app; then
                            docker stop calculator-app
                            docker rm calculator-app
                        fi
                    '''
                    
                    // Run the new container
                    sh 'docker run -d -p 3000:8080 --name calculator-app $DOCKER_USERNAME/calculator-app-finished'
                    
                    // Check if the container is running
                    sh 'docker ps'
                }
            }
        }
    }
}
